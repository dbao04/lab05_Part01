<h3 class="mb-4">Danh sách nhà cung cấp</h3>

<a href="/suppliers/create" class="btn btn-primary mb-3">+ Thêm nhà cung cấp</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Tên</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        <% if (suppliers.length === 0) { %>
            <tr>
                <td colspan="4" class="text-center">Chưa có nhà cung cấp nào</td>
            </tr>
            <% } else { %>
                <% suppliers.forEach(s => { %>
                    <tr>
                        <td>
                            <%= s.name %>
                        </td>
                        <td>
                            <%= s.address %>
                        </td>
                        <td>
                            <%= s.phone %>
                        </td>
                        <td>
                            <a href="/suppliers/<%= s._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                            <form method="post" action="/suppliers/<%= s._id %>/delete" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa nhà cung cấp này?')">Xóa</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                        <% } %>
    </tbody>
</table>